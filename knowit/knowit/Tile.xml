<?xml version="1.0" encoding="utf-8" ?> 
<tile>
  <visual branding="nameAndLogo" displayName="Tile" baseUri="">

    <binding template="TileSmall">
      <image placement="background" src="ms-appx:///Assets/knowit.png"/>
      <text></text>
      <text></text>
    </binding>

    <binding template="TileMedium">
      <image placement="background" src="ms-appx:///Assets/knowit.png"/>
      <group>
        <subgroup>
          <text  hint-style="caption" hint-align="center" >标题</text>
          <text  hint-style="captionsubtle" hint-align="center" hint-wrap="true">内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileWide"  displayName="TileV" >
      <group>
        <subgroup>
          <image hint-align="stretch" src="ms-appx:///Assets/knowit.png"/>
        </subgroup>
        <subgroup>
          <text hint-style="caption" hint-align="center">标题</text>
          <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">内容</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge"  displayName="TileV">
      <image placement="background" src="ms-appx:///Assets/knowit.png"/>
      <text hint-style="caption" hint-align="center">标题</text>
      <text hint-style="captionsubtle" hint-align="center" hint-wrap="true">内容</text>
    </binding>

  </visual>
</tile>